{
  "name": "help-output",
  "version": "1.0.0",
  "description": "Help message formatter for command line programs",
  "keywords": [
    "cli",
    "help",
    "usage"
  ],
  "main": "./lib/index.js",
  "scripts": {
    "lint": "eslint .",
    "test": "jest",
    "coverage": "jest --coverage",
    "prepublishOnly": "yarn test",
    "screencasts": "node tasks/screencasts.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Lucian Cooper <cooperlucian@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luciancooper/help-msg.git"
  },
  "commitlint": {
    "extends": [
      "@lcooper"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "lib/**/*.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setupTests.js"
    ]
  },
  "dependencies": {
    "ansi-regex": "^5.0.0",
    "ansi-styles": "^4.3.0",
    "wrap-ansi": "^7.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@lcooper/commitlint-config": "^1.1.0",
    "@lcooper/eslint-config": "^1.2.0",
    "@lcooper/eslint-config-jest": "^1.0.0",
    "chalk": "^4.1.0",
    "eslint": "^7.20.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-jsdoc": "^32.0.2",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "svg-term": "^1.3.1",
    "svgo": "^2.2.2"
  }
}
